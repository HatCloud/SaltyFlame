{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "outDir": "dist",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "index.js"],
  "exclude": [
    "node_modules",
    "build",
    "public",
    "scripts",
    "webpack",
    "jest",
    "tests",
    "e2e",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
